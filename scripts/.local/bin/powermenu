#! /bin/sh

chosen=$(printf "  Sleep
  Restart
  Power Off
  Log Out
  Lock" |
	rofi -dmenu -i '@import "power.rasi"')

case "$chosen" in
	"  Sleep") systemctl suspend ;;
	"  Restart") reboot ;;
	"  Power Off") poweroff ;;
	"  Log Out") bspc quit ;;
	"  Lock") betterlockscreen -l ;;
	*) exit 1 ;;
esac
